<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:padding="30dp"
    tools:context="com.cdtgrss.meditationapp.screens.timer.TimerFragment">

    <data>
        <variable
            name="timerViewModel"
            type="com.cdtgrss.meditationapp.screens.timer.TimerViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/timer_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:fontFamily="@font/roboto"
            android:textAlignment="center"
            android:textSize="80dp"
            android:text="@{timerViewModel.timerSecondsString}"
            app:layout_constraintBottom_toTopOf="@+id/start_button"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_chainStyle="packed"
            tools:text="00:00:00" />

        <ImageButton
            android:id="@+id/start_button"
            style="@style/main_timer_button"
            android:contentDescription="@string/start_button_content_description"
            android:src="@drawable/ic_start"
            android:onClick="@{() -> timerViewModel.onStart()}"
            android:visibility="@{timerViewModel.startButtonVisibility}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.5"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer_text"
            tools:ignore="ImageContrastCheck" />

        <ImageButton
            android:id="@+id/pause_button"
            style="@style/main_timer_button"
            android:contentDescription="@string/start_button_content_description"
            android:src="@drawable/ic_pause"
            android:visibility="@{timerViewModel.pauseButtonVisibility}"
            android:onClick="@{() -> timerViewModel.onPause()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer_text" />

        <ImageButton
            android:id="@+id/timer_finished_stop_button"
            style="@style/main_timer_button"
            android:contentDescription="@string/start_button_content_description"
            android:src="@drawable/ic_stop_blue"
            android:visibility="@{timerViewModel.finishButtonVisibility}"
            android:onClick="@{() -> timerViewModel.onStop()}"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/timer_text" />

        <ImageButton
            android:id="@+id/stop_button"
            style="@style/side_timer_button"
            android:layout_marginEnd="32dp"
            android:contentDescription="@string/start_button_content_description"
            android:src="@drawable/ic_stop"
            android:visibility="@{timerViewModel.stopButtonVisibility}"
            android:onClick = "@{() -> timerViewModel.onStop()}"
            app:layout_constraintBottom_toBottomOf="@+id/start_button"
            app:layout_constraintEnd_toStartOf="@+id/start_button"
            app:layout_constraintTop_toTopOf="@+id/start_button" />

        <ImageButton
            android:id="@+id/reset_timer_button"
            style="@style/side_timer_button"
            android:layout_marginStart="32dp"
            android:contentDescription="@string/start_button_content_description"
            android:src="@drawable/ic_reset_timer"
            android:visibility="@{timerViewModel.resetButtonVisibility}"
            android:onClick="@{() -> timerViewModel.onReset()}"
            app:layout_constraintBottom_toBottomOf="@+id/start_button"
            app:layout_constraintStart_toEndOf="@+id/start_button"
            app:layout_constraintTop_toTopOf="@+id/start_button" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</layout>
