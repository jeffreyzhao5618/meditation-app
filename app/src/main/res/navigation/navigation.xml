<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/homeFragment">

    <fragment
        android:id="@+id/homeFragment"
        android:name="com.cdtgrss.meditationapp.screens.home.HomeFragment"
        android:label="Home"
        tools:layout="@layout/fragment_home">
        <action
            android:id="@+id/action_homeFragment_to_settingsFragment"
            app:destination="@id/settingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_timerSettingsFragment"
            app:destination="@id/timerSettingsFragment" />
        <action
            android:id="@+id/action_homeFragment_to_journalFragment"
            app:destination="@id/journalFragment" />
        <action
            android:id="@+id/action_homeFragment_to_timerFragment"
            app:destination="@id/timerFragment"
            app:popUpTo="@id/homeFragment"
            app:popUpToInclusive="true" />
    </fragment>
    <fragment
        android:id="@+id/settingsFragment"
        android:name="com.cdtgrss.meditationapp.SettingsFragment"
        android:label="Settings"
        tools:layout="@layout/fragment_settings">
        <action
            android:id="@+id/action_settingsFragment_to_timerSettingsFragment"
            app:destination="@id/timerSettingsFragment" />
    </fragment>
    <fragment
        android:id="@+id/timerSettingsFragment"
        android:name="com.cdtgrss.meditationapp.screens.timersettings.TimerSettingsFragment"
        android:label="Timer Settings"
        tools:layout="@layout/fragment_timer_settings" />
    <fragment
        android:id="@+id/journalFragment"
        android:name="com.cdtgrss.meditationapp.JournalFragment"
        android:label="Journal"
        tools:layout="@layout/fragment_journal" />
    <fragment
        android:id="@+id/timerFragment"
        android:name="com.cdtgrss.meditationapp.screens.timer.TimerFragment"
        android:label="test"
        tools:layout="@layout/fragment_timer">
        <action
            android:id="@+id/action_timerFragment_to_homeFragment"
            app:destination="@id/homeFragment"
            app:popUpTo="@id/timerFragment"
            app:popUpToInclusive="true" />
        <argument
            android:name="timerLength"
            app:argType="integer"
            android:defaultValue="300" />
        <argument
            android:name="timerStarted"
            app:argType="boolean"
            android:defaultValue="false" />
    </fragment>
</navigation>